{
  "name": "node-demo",
  "version": "1.0.0",
  "description": "Node.js script demo",
  "main": "index.js",
  "repository": "git@github.com:Lervana/node-demo.git",
  "author": "Katarzyna Dadek <k.dadek@lervana.dev>",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "gulp dev-run",
    "build": "gulp prod-build",
    "lint": "eslint app/src",
    "format:fix": "pretty-quick --staged",
    "test": "mocha app/tests --require @babel/register -w",
    "coverage": "nyc mocha app/tests --require @babel/register"
  },
  "dependencies": {
    "colors": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/register": "^7.8.6",
    "@babel/runtime": "^7.8.4",
    "babel-eslint": "^10.1.0",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "chai": "^4.2.0",
    "del": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-cached": "^1.1.1",
    "gulp-eslint": "^6.0.0",
    "gulp-nodemon": "^2.4.2",
    "gulp-plumber": "^1.2.1",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-uglify-es": "^2.0.0",
    "husky": "^4.2.3",
    "mocha": "^7.1.0",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "sequelize-cli": "^5.5.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-export-default-from",
      "@babel/plugin-proposal-class-properties",
      "add-module-exports"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "app/src/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s format:fix lint"
    }
  }
}
